@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel-item {
        max-height: 690px;
    }

    .carousel-caption {
        position: absolute !important;
        top: 0 !important;
        display: -webkit-box !important;
        display: -moz-box !important;
        display: -ms-flexbox !important;
        display: -webkit-flex !important;
        display: flex !important;
        -webkit-box-align: center !important;
        -moz-box-align: center !important;
        -ms-flex-align: center !important;
        -webkit-align-items: center !important;
        align-items: center !important;
        height: 100% !important;
    }

    .flex-right {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
    }

    .display-0 {
        font-size: calc(7px + 7vw);
    }
</style>

<div id="slider" class="container-fluid flex-center">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/slider/business-plan-charts-graphs-590016.jpg"
                         alt="First slide">
                    <div class="carousel-caption shadow ">
                        <p class="display-0">Business reports generator & manager</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/slider/america-analysis-business-926987.jpg"
                         alt="Second slide">
                    <div class="carousel-caption shadow flex-center">
                        <a data-toggle="modal" data-target="#myModal2" class="display-0 bg-light-grey rounded text-white">Register now!</a>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>